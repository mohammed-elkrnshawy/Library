<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Professor.UploadActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL_ID"
            >
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText_Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Title"
                android:textSize="15dp"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL_Username"
            >
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText_Description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Description"
                android:textSize="15dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TIL_Password"
            >

            <EditText
                android:id="@+id/editText_Department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Department"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TIL_Email"
            >
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText_Year"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Year"
                android:textSize="15dp"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TIL_Category"
            >
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText_Category"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Category"
                android:textSize="15dp"
                />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_Certification"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Uploud Certification "
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="35dp"/>

            <Button
                android:id="@+id/button_Certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/lightsolid_withoutstroke_15dp"
                />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>